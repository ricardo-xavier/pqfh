# gcc -D_GNU_SOURCE split.c -o split
CC = gcc -m32 -I/usr/include/postgresql -Wall -Werror -DPQFH -I/usr/java/jdk1.8.0_144/include -I/usr/java/jdk1.8.0_144/include/linux -I/u/cobol/include -DIGNORELOCK
COB = /u/cobol/bin/cob -m ixfile=pqfh
COB = /u/cobol/bin/cob
OBJS = pqfh.o list2.o meta.o fhtypes.o op_open.o op_close.o op_start.o kdb.o op_next_prev.o op_read_random.o pq2cob.o op_rewrite.o op_write.o op_delete.o create_table.o replicator.o utils.o command.o libcobolpost.o javacall.o copy_table.o load_table.o libcobolpost_pqfh.o cmp_table.o cmp_isam.o memfh_cbl.o memfh.o memfh_idx.o delete_file.o cache.o validador.o op_json.o json_open.o json_close.o json_start.o json_next.o json/parser.o json/load.o json/lex.o json/utils.o json/tostring.o changelog/create_function.o

all: pqfh

clean:
	rm -f pqfh $(OBJS)

pqfh: $(OBJS)
	export COBOPT=/u/sist/Ricardo/git/pqfh/cobopt
	$(COB) $(OBJS) -o pqfh -lpq -lpthread -L /usr/lib/java/jre/lib/i386/client -ljvm

.c.o: .c
	$(CC) -c $<

libcobolpost.o: libcobolpost.c
	$(CC) -c -w libcobolpost.c

javacall.o: javacall.c
	$(CC) -c -w javacall.c

json/parser.o: json/parser.c
	cd json && $(CC) -c -w parser.c

json/lex.o: json/lex.c
	cd json && $(CC) -c -w lex.c

json/load.o: json/load.c
	cd json && $(CC) -c -w load.c

json/utils.o: json/utils.c
	cd json && $(CC) -c -w utils.c

json/tostring.o: json/tostring.c
	cd json && $(CC) -c -w tostring.c

changelog/create_function.o: changelog/create_function.c
	cd changelog && $(CC) -c -w create_function.c

